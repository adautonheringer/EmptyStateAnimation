<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="oval"
            >
            <gradient
                android:startColor="@color/white"
                android:endColor="@color/light_blue"
                android:type="linear"
                android:angle="45"
                />
        </shape>


    </item>

    <item
        android:top="3dp"
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        >
        <shape android:shape="oval">
            <gradient
                android:endColor="@color/light_blue"
                android:startColor="@color/light_blue2"
                android:type="linear" />
        </shape>
    </item>

    <item
        android:top="14dp"
        android:bottom="14dp"
        android:left="14dp"
        android:right="14dp"
        >
        <shape
            android:shape="oval"
            >
            <gradient
                android:startColor="@color/light_blue2"
                android:endColor="@color/dark_blue2"
                android:type="linear"
                android:angle="45"
                />
        </shape>


    </item>

    <item
        android:top="16dp"
        android:bottom="16dp"
        android:left="16dp"
        android:right="16dp"
        >
        <shape android:shape="oval">
            <gradient
                android:endColor="@color/dark_blue2"
                android:startColor="@color/dark_blue3"
                android:type="linear" />
        </shape>
    </item>

</layer-list>