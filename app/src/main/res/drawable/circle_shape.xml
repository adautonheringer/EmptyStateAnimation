<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="oval"
            >
            <gradient
                android:startColor="@color/light_blue2"
                android:endColor="@color/white"
                android:type="linear"
                android:angle="45"
                />
        </shape>


    </item>

    <item
        android:top="3dp"
        android:bottom="3dp"
        android:left="3dp"
        android:right="3dp"
        >
        <shape android:shape="oval">
            <gradient
                android:endColor="@color/light_blue1"
                android:gradientRadius="150dp"
                android:startColor="@color/transparent_blue1"
                android:type="radial" />
        </shape>
    </item>

</layer-list>